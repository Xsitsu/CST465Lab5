@model TrickOrTreaterModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>TagHelper</h2>

<form method="post" asp-action="Index" asp-controller="Home">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="FavoriteCandy" class="control-label"></label>
        <select asp-for="FavoriteCandy" class="form-control" asp-items="@(new SelectList(TrickOrTreaterModel.CandyList))"></select>
        <span asp-validation-for="FavoriteCandy"></span>
    </div>
    <div class="form-group">
        <label asp-for="Costume" class="control-label"></label>
        <select asp-for="Costume" class="form-control" asp-items="@(new SelectList(TrickOrTreaterModel.CostumeList))"></select>
        <span asp-validation-for="Costume"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
